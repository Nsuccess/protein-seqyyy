# ============================================
# AgingProteins.ai Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Required: Nebius LLM API
# ============================================
# Get your API key from https://nebius.ai/
NEBIUS_API_KEY=your_nebius_api_key_here

# LLM Model (optional, defaults shown)
NEBIUS_MODEL=meta-llama/Meta-Llama-3.1-70B-Instruct

# ============================================
# Backend Configuration
# ============================================
# FAISS vector index path
FAISS_INDEX_PATH=./backend/faiss_store

# Server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Optional: Database (for future features)
# ============================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=aging_proteins
# DB_USER=api_user
# DB_PASSWORD=changeme

# ============================================
# Optional: Redis Cache
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# Development Settings
# ============================================
# Set to 'development' for debug mode
NODE_ENV=production
PYTHONUNBUFFERED=1
