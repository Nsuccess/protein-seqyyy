# ============================================
# AgingProteins.ai Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Required: Groq API (for fast LLM inference)
# ============================================
# Get your API key from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# Required: Nebius API (for embeddings)
# ============================================
# Get your API key from https://nebius.ai/
NEBIUS_API_KEY=your_nebius_api_key_here

# ============================================
# Backend Configuration
# ============================================
# ChromaDB vector store path
CHROMA_STORE_PATH=./backend/chroma_store

# Server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Vector Store Configuration
# ============================================
# Mode: "chroma" (local development) or "neon" (production)
VECTOR_STORE_MODE=chroma

# NeonDB (PostgreSQL + pgvector) for production
# Get free DB at: https://neon.tech (0.5GB free tier)
# NEON_DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# ============================================
# Optional: Legacy Database (deprecated)
# ============================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=aging_proteins
# DB_USER=api_user
# DB_PASSWORD=changeme

# ============================================
# Optional: Redis Cache
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# Development Settings
# ============================================
# Set to 'development' for debug mode
NODE_ENV=production
PYTHONUNBUFFERED=1
